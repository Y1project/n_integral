import numpy as np
import scipy as sp
import matplotlib.pyplot as plt
 
c = 3e8
c_nat = 1

m_pi_m = 140 #MeV
m_K_m = 490 #MeV
m_m_m= 105 #MeV
m_n = 500 #eV

m_n_m = 5e-4

m_pi_g = 0.14 #GeV
m_K_g = 0.49 #GeV
m_m_g = 0.105 #GeV
m_n_g = 5e-7 #GeV

phi = 0
#Functions

def E_c(m_a,m_b,m_c): 
    E_c = (m_a**2+m_b**2-m_c**2)/(2*m_a)
    return E_c #units eV/c^2

def momentum(E,m):
    p = np.sqrt((E**2 - m**2))
    return p

def three_momentum(p,theta,phi): #flipped theta and phi
    px = p*np.sin(theta)*np.cos(phi)
    py = p*np.sin(theta)*np.sin(phi)
    pz = p*np.cos(theta)
    return np.array([px,py,pz])

def four_momentum(E,three_momentum):
    four_momentum = np.array([E, three_momentum[0], three_momentum[1], three_momentum[2]])
    return four_momentum

def beta(E,m):
    beta = np.sqrt(1-(m/E)**2)
    return beta

def boosted_fourmomentum(four_momentum, beta):
    y = (1-beta**2)**0.5
    E=y*four_momentum[0]-y*beta*four_momentum[3]
    pcz=(-y*beta*four_momentum[0]+y*four_momentum[3])
    new4mom = [E, four_momentum[1], four_momentum[2], pcz]
    return new4mom

def find4mtm_c_lf(mA,mB,mC,theta,phi,EA):
    Ec_rf = (mA**2-mB**2+mC**2)/(2*mA)
    three_mom = three_momentum((EA**2-mA**2)**0.5,theta,phi)
    mtm = [Ec_rf, three_mom[0], three_mom[1], three_mom[2]]
    return mtm

def invariant_test(E,four_momentum):
    invariant = E**2 - four_momentum[1]**2 - four_momentum[2]**2 - four_momentum[3]**2
    return invariant 

#%%
print('Section 1')

