print('Section 2.5')

print(find4mtm_c_lf(m_pi_m,m_m_g,m_n_m,(np.pi)/6,(np.pi)/2,1*1000))

four_mom_mu_pi_lf = find4mtm_c_lf(m_pi_m,m_n_m,m_m_m, np.pi/6,phi,1*1000)
four_mom_mu_K_lf = find4mtm_c_lf(m_K_m,m_n_m,m_m_m, np.pi/6,phi,1*1000)

